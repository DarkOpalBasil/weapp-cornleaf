/* pages/photo/photo.wxss */
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  color: #aaa;
}

.item-card {
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
  margin: 20rpx;
  padding: 24rpx;
  transition: all 0.3s;
}
.base-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-weight: bold;
  color: #333;
}
.detail-info {
  margin-top: 20rpx;
  border-top: 1rpx solid #eee;
  padding-top: 15rpx;
}
.info-row {
  display: flex;
  justify-content: space-between;
  margin: 10rpx 0;
  color: #666;
  font-size: 28rpx;
}
.blink-text {
  animation: blink 1s ease-in-out infinite;
  color: #e64340;
  text-align: left;
}
@keyframes blink {
  0% { opacity: 1; }
  50% { opacity: 0.5; }
  100% { opacity: 1; }
}